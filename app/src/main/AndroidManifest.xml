<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psiphon3.subscription"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="auto">
    <uses-sdk tools:overrideLibrary="ca.psiphon,com.mopub.mobileads.banner,com.mopub.mobileads.base,
    com.mopub.mobileads.interstitial,com.mopub.mobileads.rewarded_video,com.moat.analytics.mobile.mpub,com.jakewharton.threetenabp" />
    <supports-screens
                  android:smallScreens="true"
                  android:normalScreens="true"
                  android:largeScreens="true"
                  android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <uses-feature android:name="android.hardware.nfc" android:required="false" />

    <application
        android:name="com.psiphon3.PsiphonApplication"
        android:theme="@style/Theme.AppCompat"
        android:hardwareAccelerated="true"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:supportsRtl="true"
        tools:replace="android:label"
        android:label="@string/app_name_psiphon_pro"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Required for newer devices -->
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="${admobAppId}"/>

        <activity
            android:name="com.psiphon3.StatusActivity"
            android:label="@string/app_name_psiphon_pro"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.psiphon3.psiphonlibrary.NfcActivity" />
        <activity-alias
            android:name="com.psiphon3.psiphonlibrary.NfcActivity"
            android:targetActivity="com.psiphon3.StatusActivity"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="psiphon://nfc" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="com.psiphon3.FeedbackActivity"
            android:label="@string/app_name_psiphon_pro">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "psiphon://feedbackâ€ -->
                <data
                    android:scheme="psiphon"
                    android:host="feedback" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.psiphon3.psiphonlibrary.MoreOptionsPreferenceActivity"
            android:label="@string/app_name_psiphon_pro">
        </activity>
        <service
            android:name="com.psiphon3.psiphonlibrary.TunnelService"
            android:label="@string/app_name_psiphon_pro"
            android:exported="false"
            android:process=":TunnelService" >
        </service>
        <service
            android:name="com.psiphon3.psiphonlibrary.TunnelVpnService"
            android:label="@string/app_name_psiphon_pro"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:exported="false"
            android:process=":TunnelService" >
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <meta-data
                android:name="android.net.VpnService.SUPPORTS_ALWAYS_ON"
                android:value="true" />
        </service>
        <activity
            android:name="com.psiphon3.PaymentChooserActivity"
            android:label="@string/app_name_psiphon_pro">
        </activity>


        <provider
            android:name="com.psiphon3.psiphonlibrary.LoggingProvider"
            android:authorities="com.psiphon3.subscription.LoggingProvider"
            android:exported="false">
        </provider>

        <activity
            android:name="org.zirco.ui.activities.MainActivity"
            android:label="@string/browser_task_label"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:taskAffinity=":PsiphonBrowserTask"
            android:theme="@style/ZircoTheme"
            android:exported="false">
        </activity>
        <activity android:name="org.zirco.ui.activities.AboutActivity" />
        <activity android:name="org.zirco.ui.activities.EditBookmarkActivity"/>
        <activity android:name="org.zirco.ui.activities.BookmarksListActivity"/>
        <activity android:name="org.zirco.ui.activities.HistoryListActivity"/>
        <activity android:name="org.zirco.ui.activities.DownloadsListActivity"/>
        <activity android:name="org.zirco.ui.activities.AdBlockerWhiteListActivity"/>
        <activity android:name="org.zirco.ui.activities.BookmarksHistoryActivity"/>
        <activity android:name="org.zirco.ui.activities.ChangelogActivity"/>
        <activity android:name="org.zirco.ui.activities.preferences.PreferencesActivity"/>
        <activity android:name="org.zirco.ui.activities.preferences.HomepagePreferenceActivity"/>
        <activity android:name="org.zirco.ui.activities.preferences.SearchUrlPreferenceActivity"/>
        <activity android:name="org.zirco.ui.activities.preferences.UserAgentPreferenceActivity"/>
        <activity android:name="org.zirco.ui.activities.MobileViewListActivity"/>
        <activity android:name="org.zirco.ui.activities.DesktopViewListActivity"/>
        <activity android:name="org.zirco.ui.activities.WeaveBookmarksListActivity"/>
        <activity android:name="org.zirco.ui.activities.preferences.WeavePreferencesActivity"/>
        <activity android:name="org.zirco.ui.activities.preferences.WeaveServerPreferenceActivity"/>

        <provider android:name="org.zirco.providers.ZircoBookmarksContentProvider" android:exported="false" android:authorities="org.zirco.providers.psiphonsubscriptionzircobookmarkscontentprovider"/>
        <provider android:name="org.zirco.providers.WeaveContentProvider" android:exported="false" android:authorities="org.zirco.providers.psiphonsubscriptionweavecontentprovider"/>

        <meta-data android:name="com.google.android.gms.version"
			   android:value="@integer/google_play_services_version" />

        <activity android:name="com.mopub.mobileads.MoPubActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.mopub.mobileads.MraidActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.mopub.common.MoPubBrowser" android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name="com.mopub.mobileads.MraidVideoPlayerActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>

        <!-- Rewarded Video and Rewarded Playables -->
        <activity android:name="com.mopub.mobileads.RewardedMraidActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name="com.google.android.gms.ads.AdActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name="com.mopub.common.privacy.ConsentDialogActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>

    </application>

</manifest>
